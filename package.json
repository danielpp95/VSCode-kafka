{
	"name": "kafka_dragon",
	"displayName": "",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:KafkaView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "KafkaView",
				"contents": "Fetching Kafka..."
			}
		],
		"commands": [
			{
				"command": "kafka_dragon.FetchMessages",
				"title": "Fetch messages",
				"icon": {
					"light": "images/play.svg",
					"dark": "images/play.svg"
				}
			},
			{
				"command": "kafka_dragon.StopFetchMessages",
				"title": "Stop fetching",
				"icon": {
					"light": "images/stop.svg",
					"dark": "images/stop.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "images/kafka.svg",
					"id": "kafkaView",
					"title": "Kafka"
				}
			]
		},
		"views": {
			"kafkaView": [
				{
					"id": "KafkaView",
					"name": "KafkaView"
				}
			]
		},
		"menus": {
			"view/item/context": [
				{
					"command": "kafka_dragon.FetchMessages",
					"when": "view == KafkaView  && viewItem == MessageExplorer",
					"group": "inline"
				},
				{
					"command": "kafka_dragon.StopFetchMessages",
					"when": "view == KafkaView  && viewItem == MessageExplorer",
					"group": "inline"
				}
			],
			"commandPalette": [
				{
					"command": "kafka_dragon.FetchMessages",
					"when": "false"
				},
				{
					"command": "kafka_dragon.StopFetchMessages",
					"when": "false"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/kafka-node": "^3.0.0",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"kafka-node": "^5.0.0"
	}
}
